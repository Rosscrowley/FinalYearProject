<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="16dp"
    android:background="@drawable/list_shape">

    <ImageView
        android:id="@+id/exerciseIcon"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/tongue_twister_exercise"
        app:layout_constraintBottom_toBottomOf="@+id/exerciseName"
        app:layout_constraintEnd_toStartOf="@+id/exerciseName"
        app:layout_constraintTop_toTopOf="@+id/exerciseName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="186dp"
        android:layout_height="63dp"
        android:layout_marginTop="4dp"
        android:text="Exercise Name"
        android:textColor="#FFFFFFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:text="Incomplete"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toEndOf="@+id/exerciseName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071"
        android:background="@color/DEIncomplete"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/appColour"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/exerciseName"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>